{
  "name": "wunjo-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "prisma": {
    "schema": "src/infra/orm/prisma/schema.prisma"
  },
  "scripts": {
    "prod": "tsx ./src/server.ts",
    "local": "tsx watch --env-file=./env/.env.local ./src/server.ts",
    "dev": "tsx watch --env-file=./env/.env.dev ./src/server.ts",
    "lint": "tsc --noEmit && eslint . --no-error-on-unmatched-pattern",
    "lint:fix": "npm run lint -- --fix",
    "redis:reset": "redis-cli FLUSHDB",
    "prisma": "dotenv -e ./env/.env -- npx prisma generate",
    "prisma:local": "dotenv -e ./env/.env.local -- npx prisma",
    "prisma:reset": "dotenv -e ./env/.env -- npx prisma migrate reset",
    "test": "dotenv -e ./env/.env.test -- vitest",
    "test:ci": "export $(cat ./env/.env.test | xargs) && vitest",
    "docker:update": "docker cp ./env/.env wunjo.backend:/app/env/.env",
    "docker:prisma": "docker exec wunjo.backend npm run prisma generate",
    "docker:prisma:init": "docker exec wunjo.backend npm run prisma dev --name init"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^9.3.0",
    "@prisma/client": "^6.1.0",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.34.5",
    "cors": "^2.8.5",
    "dotenv-cli": "^7.4.2",
    "express": "^4.21.1",
    "express-async-errors": "^3.1.1",
    "google-auth-library": "^9.15.1",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.16",
    "pino": "^9.5.0",
    "redis-memory-server": "^0.11.0",
    "rsdi": "^3.0.3",
    "sinon": "^19.0.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "vitest": "^2.1.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.8.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.8.7",
    "@types/nodemailer": "^6.4.17",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "eslint": "^9.14.0",
    "pino-pretty": "^11.3.0",
    "prisma": "^6.1.0",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vite-tsconfig-paths": "^5.0.1"
  }
}
